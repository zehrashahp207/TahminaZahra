class Mehsul:
    def __init__(self, ad, qiymet, say):
        self.ad = ad
        self.qiymet = qiymet
        self.say = say

    def __str__(self):
        return f"{self.ad} - {self.qiymet} AZN - {self.say} ədəd"

class Magaza:
    def __init__(self):
        self.mehsullar = []

    def mehsul_elaveet(self, ad, qiymet, say):
        self.mehsullar.append(Mehsul(ad, qiymet, say))

    def mehsullari_goster(self):
        if len(self.mehsullar) == 0:
            print("Mağazada məhsul yoxdur.")
        else:
            for i, p in enumerate(self.mehsullar, 1):
                print(f"[{i}] {p}")

    def mehsul_sil(self, index):
        if 0 <= index < len(self.mehsullar):
            removed = self.mehsullar.pop(index)
            print(f"{removed.ad} silindi.")
        else:
            print("Yanlış nömrə!")

magaza = Magaza()

while True:
    print("""
    Mağaza:
    1. Məhsul əlavə et
    2. Məhsulları göstər
    3. Məhsul sil
    0. Çıxış
    """)
    secim = input("Seçiminizi daxil edin: ")

    if secim == "0":
        print("Çıxılır...")
        break

    elif secim == "1":
        ad = input("Məhsul adı: ")
        try:
            qiymet = float(input("Qiymət (AZN): "))
            say = int(input("Miqdar: "))
        except:
            print("Qiymət və ya miqdar düzgün deyil!")
            continue
        magaza.mehsul_elaveet(ad, qiymet, say)
        print("Məhsul əlavə edildi.")

    elif secim == "2":
        magaza.mehsullari_goster()

    elif secim == "3":
        try:
            nomre = int(input("Silinəcək məhsulun nömrəsi: ")) - 1
        except:
            print("Düzgün nömrə daxil edin!")
            continue
        magaza.mehsul_sil(nomre)

    else:
        print("Yanlış seçim!")

